generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  firstName String
  lastName  String
  email     String   @unique
  password  String
  role      Role     @default(STUDENT)
  recipes   Recipe[]
}

model Recipe {
  id           Int          @id @default(autoincrement())
  title        String
  description  String
  instructions String
  appliances   Appliances[]
  categories   Category[]
  imageURL     String
  userID       Int
  createdAt    DateTime     @default(now())
  owner        String
  user         User         @relation(fields: [userID], references: [id])
  ingredients  Ingredient[] @relation("IngredientToRecipe")
}

model Ingredient {
  id      Int      @id @default(autoincrement())
  name    String   @unique
  recipes Recipe[] @relation("IngredientToRecipe")
}

enum Role {
  STUDENT
  VENDOR
  ADMIN
}

enum Appliances {
  RiceCooker
  PaniniPress
  ToasterOwen
  Toaster
  Microwave
  HotPlate
}

enum Category {
  Breakfast
  Vegan
  Meat
  Dessert
  Lunch
  Chocolate
}
